{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@entities/*": ["./entities/*"],
      "@features/*": ["./features/*"],
      "@widgets/*": ["./widgets/*"],
      "@pages/*": ["./pages/*"],
      "@processes/*": ["./processes/*"],
      "@app/*": ["./app/*"],
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
